<%- include('./admin-layout/header.ejs'); %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <h2>Users</h2>
  <a href="/submit" class="btn btn-primary">Create User</a>
   <div class="table-responsive">
     <table class="table table-striped table-sm">
       <thead>
         <tr>
           <th>#</th>
           <th>Username</th>
           <th>Password</th>
           <th>Email</th>
           <th>Profile Photo</th>
           <th>Action</th> 
         </tr> 
          <tbody>
            <% for(var i=0; i< users.length; i++) { %>
            <tr>
             <td><%= users[i].id %></td>
             <td><%= users[i].username %></td>
             <td><%= users[i].password %></td>           
             <td><%= users[i].email %></td>
            <td>
               <img src="../photos/<%= users[i].profilePicture %>" 
               width="100px" 
               height="100px"
               /> 
             </td>
             <td>
              <form action="/edit/<%= users[i].id %>" method="get">
                <input type="submit" value="Edit" class="btn btn-primary">
              </form>
             </td>
             <td>
               <form action="/delete/<%= users[i].id %>" method="post">
                <input type="submit" value="Delete" class="btn btn-primary">
              </form>
             </td>
           </tr>
           <% } %>    
       </tbody>
       </thead>
     </table> 
   </div>
 </main>
<%- include('./admin-layout/footer.ejs'); %>
