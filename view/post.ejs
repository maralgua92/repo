<%- include('./admin-layout/header.ejs'); %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <h2>Post</h2>
  <a href="/psubmit" class="btn btn-primary">Create Post</a>
  <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Intro</th>
              <th>Text</th>
              <th>Profile Photo</th>
              <th>Action</th> 
            </tr>
             <tbody>
               <% for(var i=0; i< users.length; i++) { %>
               <tr>
                <td><%= users[i].id %></td>
                <td><%= users[i].title %></td>
                <td><%= users[i].intro %></td>           
                <td><%= users[i].text %></td>
               <td> 
                  <img src="../photos/<%= users[i].profilePicture %>" 
                  width="100px" 
                  height="100px" 
                  />
                </td>
                <td>
                 <form action="/pedit/<%= users[i].id %>" method="get">
                   <input type="submit" value="Edit" class="btn btn-primary">
                 </form>
                </td>
                <td>
                  <form action="/pdelete/<%= users[i].id %>" method="post">
                   <input type="submit" value="Delete" class="btn btn-primary">
                 </form>
                </td>
              </tr>
              <% } %>    
          </tbody>
          </thead>
        </table> 
      </div>
  </div>
<%- include('./admin-layout/footer.ejs'); %>