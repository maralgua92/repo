<%- include('../admin-layout/header.ejs'); %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <h2>Edit User</h2>
    <form action="/edit/<%= user.id %>" method="POST" enctype="multipart/form-data">
<div class="mb-3">
    <label class="form-label">Username</label>
    <input 
    type="text" 
    name="username"
    class="form-control" 
    aria-describedby="emailHelp"
    value="<%= user.username %>"/>
  </div>
  <div class="mb-3">
    <label class="form-label">Email address</address></label>
    <input 
    type="email" 
    name="email"
    class="form-control"
    aria-describedby="emailHelp" 
    value="<%= user.email %>"/>
  </div> 
  <div class="mb-3">
    <label class="form-label">Password</label>
    <input type="password" 
    name="password"
    class="form-control"
    value="<%= user.password %>" > 
  </div>
  <div class="mb-3">
    <label class="form-label">Profile Photo</label>
    <input 
    type="file" 
    name="profilePhoto"
    class="form-control">
  </div> 
  <input type="submit" class="btn btn-primary"></input>
    </form>
</main>
