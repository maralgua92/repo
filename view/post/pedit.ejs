<%- include('../admin-layout/header.ejs'); %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <h2>Edit Post</h2>
    <form action="/pedit/<%= user.id %>" method="POST" enctype="multipart/form-data">
<div class="mb-3">
    <label class="form-label">Title</label>
    <input 
    type="title" 
    name="title"
    class="form-control" 
    aria-describedby="titleHelp"
    value="<%= user.title %>"/>
  </div>
  <div class="mb-3">
    <label class="form-label">Intro</address></label>
    <input 
    type="intro" 
    name="intro"
    class="form-control"
    aria-describedby="introHelp" 
    value="<%= user.intro %>"/>
  </div>
  <div class="mb-3">
    <label class="form-label">Text</label>
    <input type="text" 
    name="text"
    class="form-control"
    value="<%= user.text %>" > 
  </div>
  <div class="mb-3">
    <label class="form-label">Profile Photo</label>
    <input 
    type="file" 
    name="profilePhoto"
    class="form-control">
  </div> 
  <input type="submit" class="btn btn-primary"></input>
    </form>
</main>
<%- include('../admin-layout/footer.ejs'); %> 
 